@model IntegratorEHZ.Models.Device
@{
    ViewData["Title"] = "Обновить";
}
<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Изменить</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IMEI"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Internal_Protocol"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="IMEI" class="form-control" />
                        <span asp-validation-for="IMEI" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Internal_Protocol" class="form-control" />
                        <span asp-validation-for="Internal_Protocol" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-10" value="Изменить" />
                        <a asp-action="Devices" class="btn btn-danger w-10">Назад</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

