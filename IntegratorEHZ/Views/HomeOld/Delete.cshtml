@model IntegratorEHZ.Models.Device
@{
    ViewData["Title"] = "Delete";
}
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Удалить устройство</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IMEI"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Internal_Protocol"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="IMEI" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Internal_Protocol" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <input type="submit" class="btn btn-danger w-10" value="Удалить" />
                        <a asp-action="Devices" class="btn btn-success w-10">Назад</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

