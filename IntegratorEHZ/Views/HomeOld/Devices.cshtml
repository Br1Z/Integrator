@model IEnumerable<IntegratorEHZ.Models.Device>
@{
    ViewData["Title"] = "Устройства";
}

<h1>Устройства</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список устройств</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Home" asp-action="CreateDevice" class="btn btn-primary">Добавить устройство</a> 
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        IMEI
                    </th>
                    <th>
                        Внутренний протокол
                    </th>
                    <th>
                        Управление
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="35%">@item.IMEI</td>
                        <td width="35%">@item.Internal_Protocol</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Home" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Изменить</a>
                                <a asp-controller="Home" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Не одно устройство ещё не создано</p>
    }



</div>

